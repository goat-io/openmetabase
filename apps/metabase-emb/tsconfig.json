{
  "compilerOptions": {
    "target": "es2022", // or "es2020", "esnext"
    "module": "commonjs", // or "nodenext" for ES Modules
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
